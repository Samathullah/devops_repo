pipeline {
    agent any
    stages {
        stage('One') {
            steps {
                echo 'Continue from previous phase: Ready to deploy next environment.'
            }
        }
        stage('Two') {
            steps {
                input('Do you want to update to UAT container?')
            }
        }
        stage('Three') {
            steps {
                sh '''#!/bin/bash
                puppet resource file /tmp/clone ensure=absent force=true;
                puppet resource file /tmp/clone ensure=directory;
                cd /tmp/clone;
                git clone https://github.com/Samathullah/devops_repo.git;
                locate_script='/tmp/clone/devops_repo/script_to_run';
                if [ ! -f "$locate_script" ]; then
                    echo "Error: Script $locate_script not found.";
                    exit 1;
                fi
                echo "Running script...";
                bolt script run $locate_script -t puppetclient1.localdomain -u clientadm -p user123 --no-host-key-check --run-as root;
                '''
                echo "UAT container updated"
            }
        }
        stage('Four') {
            steps {
                input('Do you want to deploy to Production container?')
            }
        }
        stage('Five') {
            steps {
                sh '''#!/bin/bash
                locate_script='/tmp/clone/devops_repo/script_to_run';
                if [ ! -f "$locate_script" ]; then
                    echo "Error: Script $locate_script not found.";
                    exit 1;
                fi
                bolt script run $locate_script -t puppetclient2.localdomain -u clientadm -p user123 --no-host-key-check --run-as root;
                '''
                echo "Production container updated"
            }
        }
        stage('Completed updating Operation') {
            steps {
                echo 'Completed updating to Production Container'
            }
        }
    }
}
